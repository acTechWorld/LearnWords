<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.perso.learnwords">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/duck_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/duck_white_circle"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".UpdatePage"></activity>
        <activity
            android:name=".OralTraductionGame"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".OralTraductionMenu"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AddWordPopupAuto"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Popup" />
        <activity
            android:name=".ScoreTraductionGame"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".EditWordPopup"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Popup" />
        <activity
            android:name=".AddWordPopupManual"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Popup" />
        <activity
            android:name=".AddWordPopupMenu"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Popup" />
        <activity
            android:name=".TraductionGame"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".TraductionMenu"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ReviseMenu"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>