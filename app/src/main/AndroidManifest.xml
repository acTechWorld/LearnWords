<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.perso.learnwords">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/duck_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/duck_white_circle"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.perso.learnwords.OralTraductionGame"
            android:configChanges = "orientation"
            android:screenOrientation = "portrait"/>
        <activity android:name="com.perso.learnwords.OralTraductionMenu"
            android:configChanges = "orientation"
            android:screenOrientation = "portrait"/>
        <activity
            android:name="com.perso.learnwords.AddWordPopupAuto"
            android:theme="@style/AppTheme.Popup"
            android:configChanges = "orientation"
            android:screenOrientation = "portrait"/>
        <activity android:name="com.perso.learnwords.ScoreTraductionGame"
            android:configChanges = "orientation"
            android:screenOrientation = "portrait"/>
        <activity
            android:name="com.perso.learnwords.EditWordPopup"
            android:theme="@style/AppTheme.Popup"
            android:configChanges = "orientation"
            android:screenOrientation = "portrait"/>
        <activity
            android:name="com.perso.learnwords.AddWordPopupManual"
            android:theme="@style/AppTheme.Popup"
            android:configChanges = "orientation"
            android:screenOrientation = "portrait"/>
        <activity
            android:name="com.perso.learnwords.AddWordPopupMenu"
            android:theme="@style/AppTheme.Popup"
            android:configChanges = "orientation"
            android:screenOrientation = "portrait"/>
        <activity android:name="com.perso.learnwords.TraductionGame"
            android:configChanges = "orientation"
            android:screenOrientation = "portrait"/>
        <activity android:name="com.perso.learnwords.TraductionMenu"
            android:configChanges = "orientation"
            android:screenOrientation = "portrait"/>
        <activity android:name="com.perso.learnwords.ReviseMenu"
            android:configChanges = "orientation"
            android:screenOrientation = "portrait"/>
        <activity android:name="com.perso.learnwords.MainActivity"
            android:configChanges = "orientation"
            android:screenOrientation = "portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>